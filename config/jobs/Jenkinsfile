pipeline {
    agent none
    stages {
        stage('BuildAndTest') {
            matrix {
                agent any
                axes {
                    axis {
                        name 'PLATFORM'
                        values 'linux', 'windows', 'mac'
                    }
                    axis {
                        name 'OS'
                        values '1604', '1804', '8.1', '2019', '2016'
                    }

                    axis {
                        name 'Build-Type'
                        values 'Release', 'RelWithDebInfo', 'Debug'
                    }

                    axis {
                        name 'Sim'
                        values 'Simulation', 'Non-Simulation'
                    }
                }
                excludes {
                    exclude {
                        axis {
                            name 'PLATFORM'
                            values 'linux'
                        }
                        axis {
                            name 'OS'
                            values 'safari'
                        }
                    }
                    exclude {
                        axis {
                            name 'PLATFORM'
                            notValues 'windows'
                        }
                        axis {
                            name 'OS'
                            values 'edge'
                        }
                    }
                }
                stages {
                    stage('Pre-Build') {
                        steps {
                            checkout scm
                        }
                    }
                    stage('Build') {
                        steps {
                            echo "Do Build for ${PLATFORM} - ${OS} - ${Build-Type} - ${Sim}"
                        }
                    }
                    stage('Test') {
                        steps {
                            echo "Do Test for ${PLATFORM} - ${OS} - ${Build-Type} - ${Sim}"
                        }
                    }
                }
            }
        }
    }
}